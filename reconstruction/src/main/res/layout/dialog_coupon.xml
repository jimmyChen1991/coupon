<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingBottom="17.5dp"
    android:background="@color/ffffff">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_21"
            android:textColor="@color/normal"
            android:text="@string/server_settle_moeny1"/>
        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/order_x"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#e6e6e6"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/inputWrap"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/normal"
            android:text="兑换码"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/coupon_id"
            android:layout_width="500dp"
            android:layout_height="42dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_3"
            android:textColor="@color/normal"
            android:textSize="@dimen/sp_18"
            android:inputType="text"
            android:maxLines="1"
            android:hint="输入兑换码"
            android:background="@drawable/edit_shape"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <Button
            android:id="@+id/check_coupon"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textColor="@color/ffffff"
            android:textSize="@dimen/sp_15"
            android:text="使用"
            android:layout_marginLeft="22dp"
            android:background="@drawable/checkcode_selector"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inputWrap"
        android:paddingTop="120dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/invalid_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/light"
            android:layout_gravity="center_horizontal"
            android:text="@string/empty_coupon"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rvWrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inputWrap"
        android:visibility="gone"
        android:paddingTop="@dimen/dp_15"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
        </android.support.v7.widget.RecyclerView>
        <Button
            android:id="@+id/use_coupon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/checkcode_selector"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/ffffff"
            android:text="@string/queding"
            />
    </LinearLayout>
</RelativeLayout>