<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hhyg.TyClosing.ui.OrderActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/topshdowbar">
            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/back"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#333333"
                android:textSize="21sp"
                android:text="@string/order_conform"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_marginBottom="150dip"
            android:background="@color/gray_f2"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15">
                <android.support.v7.widget.CardView
                    android:id="@+id/vipWrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:visibility="gone"
                    app:cardElevation="@dimen/dp_2"
                    app:cardCornerRadius="@dimen/dp_2">
                    <include
                        layout="@layout/orderconform_membervalidate" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/user_info"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_below="@id/vipWrap"
                    app:cardElevation="@dimen/dp_2"
                    app:cardCornerRadius="@dimen/dp_2">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_2"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_10"
                        >
                        <TextView
                            android:id="@+id/user_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/maincolor"
                            android:text="@string/user_info"/>
                        <TextView
                            android:id="@+id/user_split"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_below="@+id/user_title"
                            android:background="@color/light"/>
                        <TextView
                            android:id="@+id/user_infoleft"
                            android:layout_width="250dp"
                            android:layout_height="90dp"
                            android:layout_below="@+id/user_split"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="13dp"
                            android:textColor="@color/normal"
                            android:lineSpacingExtra="7dp"/>
                        <TextView
                            android:id="@+id/user_inforight"
                            android:layout_width="250dp"
                            android:layout_height="90dp"
                            android:layout_below="@id/user_split"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_alignParentRight="true"
                            android:textSize="13dp"
                            android:textColor="@color/normal"
                            android:lineSpacingExtra="7dp"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/imgCard"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_below="@id/user_info"
                    android:layout_marginTop="@dimen/dp_15"
                    app:cardElevation="@dimen/dp_2"
                    app:cardCornerRadius="@dimen/dp_2">
                    <LinearLayout
                        android:id="@+id/imgWrap"
                        android:layout_width="match_parent"
                        android:layout_height="125dip"
                        android:layout_margin="@dimen/dp_2"
                        android:paddingLeft="8dip"
                        android:paddingBottom="8dip"
                        android:paddingTop="8dip"
                        android:orientation="horizontal"
                        android:background="#ffffff">

                        <RelativeLayout
                            android:id="@+id/goods_la2"
                            android:layout_width="80dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dip"
                            android:layout_marginTop="5dip"
                            android:layout_weight="1"
                            android:layout_marginBottom="5dip"
                            android:background="#ffffff"
                            android:layout_marginRight="8dip">

                            <ImageView
                                android:id="@+id/button_goods2"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:visibility="invisible"
                                android:background="#ffffff"/>
                            <TextView
                                android:id="@+id/button_Cover2"
                                android:layout_height="20dip"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="15dip"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="15dip"
                                android:visibility="invisible"
                                android:text="有税商品"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:textColor="#ffffff"
                                android:background="#e0c9986a"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/goods_la3"
                            android:layout_width="80dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dip"
                            android:layout_marginTop="5dip"
                            android:layout_weight="1"
                            android:layout_marginBottom="5dip"
                            android:background="#ffffff"
                            android:layout_marginRight="8dip">

                            <ImageView
                                android:id="@+id/button_goods3"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:visibility="invisible"
                                android:background="#ffffff"/>

                            <TextView
                                android:id="@+id/button_Cover3"
                                android:layout_height="20dip"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="15dip"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="15dip"
                                android:visibility="invisible"
                                android:text="有税商品"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:textColor="#ffffff"
                                android:background="#e0c9986a"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/goods_la4"
                            android:layout_width="80dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dip"
                            android:layout_marginTop="5dip"
                            android:layout_weight="1"
                            android:layout_marginBottom="5dip"
                            android:background="#ffffff"
                            android:layout_marginRight="8dip">

                            <ImageView
                                android:id="@+id/button_goods4"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:visibility="invisible"
                                android:background="#ffffff"/>

                            <TextView
                                android:id="@+id/button_Cover4"
                                android:layout_height="20dip"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="15dip"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="15dip"
                                android:visibility="invisible"
                                android:text="有税商品"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:textColor="#ffffff"
                                android:background="#e0c9986a"/>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/goods_la5"
                            android:layout_width="80dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dip"
                            android:layout_marginTop="5dip"
                            android:layout_weight="1"
                            android:layout_marginBottom="5dip"
                            android:background="#ffffff"
                            android:layout_marginRight="8dip">

                            <ImageView
                                android:id="@+id/button_goods5"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:visibility="invisible"
                                android:background="#ffffff"/>

                            <TextView
                                android:id="@+id/button_Cover5"
                                android:layout_height="20dip"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="15dip"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="15dip"
                                android:visibility="invisible"
                                android:text="有税商品"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:textColor="#ffffff"
                                android:background="#e0c9986a"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/goods_la7"
                            android:layout_width="80dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dip"
                            android:layout_marginTop="5dip"
                            android:layout_weight="1"
                            android:layout_marginBottom="5dip"
                            android:background="#ffffff"
                            android:layout_marginRight="8dip">

                            <ImageView
                                android:id="@+id/button_goods7"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:visibility="invisible"
                                android:background="#ffffff"/>

                            <TextView
                                android:id="@+id/button_Cover7"
                                android:layout_height="20dip"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="15dip"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="15dip"
                                android:visibility="invisible"
                                android:text="有税商品"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:textColor="#ffffff"
                                android:background="#e0c9986a"/>
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/button_goods6"
                            android:layout_height="match_parent"
                            android:layout_width="40dip"
                            android:layout_marginBottom="5dip"
                            android:layout_marginTop="5dip"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:src="@drawable/more_button_200_200"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgCard"
                    android:layout_marginTop="@dimen/dp_15"
                    app:cardElevation="@dimen/dp_2"
                    app:cardCornerRadius="@dimen/dp_2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_2"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:background="@color/ffffff"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/coupon_entry"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@color/maincolor"
                                android:textSize="@dimen/sp_18"
                                android:text="@string/server_settle_moeny1"/>
                            <ImageView
                                android:id="@+id/img_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/orderdiscount"/>
                            <TextView
                                android:id="@+id/coupon_warnning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/img_icon"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_centerVertical="true"
                                android:textColor="#a0a0a0"
                                android:textSize="@dimen/sp_15" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_alignParentBottom="true"
                                android:background="@color/mygray"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/bouns_entry"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@color/maincolor"
                                android:textSize="@dimen/sp_18"
                                android:text="@string/server_settle_hongbao"/>
                            <ImageView
                                android:id="@+id/img_icon2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/orderdiscount"/>
                            <TextView
                                android:id="@+id/bouns_warnning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/img_icon2"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_centerVertical="true"
                                android:textColor="#a0a0a0"
                                android:textSize="@dimen/sp_15" />
                            <TextView
                                android:id="@+id/giftcard_split"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_alignParentBottom="true"
                                android:background="@color/mygray"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/giftcard_entry"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/maincolor"
                                android:textSize="@dimen/sp_18"
                                android:layout_centerVertical="true"
                                android:text="@string/server_settle_card"/>
                            <ImageView
                                android:id="@+id/img_icon3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/orderdiscount"/>
                            <TextView
                                android:id="@+id/giftcard_warnning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/img_icon3"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_centerVertical="true"
                                android:textColor="#a0a0a0"
                                android:textSize="@dimen/sp_15"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:background="#ffffff"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <include
                layout="@layout/calculate"
                android:id="@+id/calculate_layout"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:background="#000000"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/toolbar20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#333333">

                <TextView
                    android:id="@+id/bottomTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:layout_marginBottom="0dip"
                    android:layout_marginTop="14dip"
                    android:layout_marginRight="40dip"
                    android:text=""
                    android:gravity="right|center"
                    android:textColor="#d1ae8b"/>

                <Button
                    android:id="@+id/button_goto_pay"
                    android:layout_height="fill_parent"
                    android:layout_width="210dip"
                    android:layout_marginBottom="13dip"
                    android:layout_marginRight="40dip"
                    android:layout_marginTop="13dip"
                    android:layout_toLeftOf="@+id/bottomTitle"
                    android:background="@drawable/button_corner"
                    android:text="去支付"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dip"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragmentLayout"
        android:layout_width="600dip"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#ffffff"
        android:clickable="true">
        <fragment
            android:id="@+id/orderDetailFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="com.hhyg.TyClosing.ui.fragment.AutoSettleOrderItemsFragment" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
