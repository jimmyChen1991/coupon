<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingBottom="17.5dp"
    android:background="@color/ffffff">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_21"
            android:textColor="@color/normal"
            android:text="@string/server_settle_hongbao"/>
        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/order_x"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#e6e6e6"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:paddingTop="180dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/invalid_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/light"
            android:layout_gravity="center_horizontal"
            android:text="@string/empty_bouns"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rvWrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:visibility="gone"
        android:paddingTop="@dimen/dp_15"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/sp_15"
            android:text="@string/bouns_warnning"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
        </android.support.v7.widget.RecyclerView>
        <Button
            android:id="@+id/use_bouns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/checkcode_selector"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/ffffff"
            android:text="@string/queding"
            />
    </LinearLayout>
</RelativeLayout>